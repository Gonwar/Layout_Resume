include ./progress_dot/progress_dot.pug
mixin skills(creative, teamwork, innovate, communication)
    dl.skills__list
        if(creative)
            dt.skills__list_title creative
            dd.skills__list_description
                +progress_dot(creative)
        if(teamwork)
            dt.skills__list_title teamwork
            dd.skills__list_description
                +progress_dot(teamwork)
        if(innovate)
            dt.skills__list_title innovate
            dd.skills__list_description
                +progress_dot(innovate)
        if(communication)
            dt.skills__list_title communication
            dd.skills__list_description
                +progress_dot(communication)
